            "type": "string"
        },
        "keyVaultResourceGroup": {
            "type": "string"
        },
        "keyVaultAccessPolicies": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "Array of objects with the following schema: https://docs.microsoft.com/en-us/azure/templates/microsoft.keyvault/2018-02-14/vaults/accesspolicies"
            }
        }
    },
    "variables": {},
    "resources": [
